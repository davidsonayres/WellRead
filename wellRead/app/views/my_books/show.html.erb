<div class="review_wrapper">
  <div class="create_review">
    <h1>What did you think?</h1>
    <% @review = Review.new%>
    <%= form_for [@my_book, @review] do |f| %>
      <% f.label :review %>
      <%= f.text_area :review, placeholder: "Best book ever, or never-read-again?\n Make your notes here!" %>
      <%= f.hidden_field :my_book_id, value: @my_book.id %>
      <div class="review_submit">
        <%= f.submit "Add Review"%>
      </div>
      <% end %>
      </div>
  </div>
</div>
    <div class="lend_look">
    <% if @lend != nil && @lend.my_book_id == @my_book.id%>
    <%= @my_book.edition.title %> is currently lent out to  <%= @lend.friend %>
    <%=link_to "They Returned It", my_book_lend_path(params[:id]), method: :delete, data: {confirm: "Are you sure?"} %>
    <%else%>
    <%= link_to "Lend this book to a friend", new_my_book_lend_path(params[:id]) %>
        <%end%>
      <!-- <#% if @lend.friend  do%> -->

        <%#=link_to "They Returned It", my_book_lend_path(lend.my_book_id, lend.id), method: :delete, data: {confirm: "Are you sure?"} %>
        <!-- <#% end %> -->
      <%#else%>
        <%#= link_to "Lend this book to a friend", new_my_book_lend_path(lend.my_book_id, lend.id) %>
      <%#end%>
    </div>

  <div class="review_content">
    <ul>
      <%@my_book.reviews.each do |review|%>
        <li><%=review.review %></li>
        <%=link_to "Edit Review", edit_my_book_review_path(review.my_book_id, review.id) %>
        <!-- <button class="button_4">Modify this Review</button> -->
        <%=link_to "Delete", my_book_review_path(review.my_book_id, review.id), method: :delete, data: {confirm: "Are you sure?"} %>

      <%end%>
    </ul>
  </div>

  <div class="quote_wrapper">
    <div class="create_quote">
      <h1>Favorite Quote?</h1>
      <% @quote = Quote.new%>
      <%= form_for [@my_book, @quote] do |f| %>
        <% f.label :quote %>
        <%= f.text_area :quote, placeholder: "What is the best line in the book?\n Make your notes here!" %>
        <%= f.hidden_field :my_book_id, value: @my_book.id %>
        <div class="quote_submit">
          <%= f.submit "Add Quote"%>
        </div>
      <% end %>
    </div>
  </div>
<div class="quote_content">
  <ul>
    <%@my_book.quotes.each do |quote|%>
      <li><%=quote.quote %></li>
      <%=link_to "Edit Quote", edit_my_book_quote_path(quote.my_book_id, quote.id) %>
      <!-- <button class="button_4">Modify this Quote</button> -->
      <%=link_to "Delete", my_book_quote_path(quote.my_book_id, quote.id), method: :delete, data: {confirm: "Are you sure?"} %>

    <%end%>
  </ul>
</div>
