<div class="user_greeting">
  <h1>Hello, <%= @user.f_name %> <%= @user.l_name%> </h1>

  <p>Welcome to your profile!</p>
</div>

 <a href="<%= library_path %>" class="my_library"><button>My Library</button></a>

  <a href="<%= books_path %>" class="my_library"><button>Book Search</button></a>

<div class="modify_user_form">
  <h4>Change my Profile Details </h4>
    <%= form_for @user do |f| %>
      <% f.label "First Name" %><%= f.text_field :f_name %></br>
      <% f.label "Last Name" %><%= f.text_field :l_name %></br>
      <% f.label "Username" %><%= f.text_field :username %></br>
      <% f.label "Email" %><%= f.email_field :email %></br>
      <div class="modify_user_form_submit">
        <%= f.submit "Update" %>
      </div>
    <% end %>
</div>
