<div class="user_greeting">
  <h1>Hello, <%= @user.f_name %> <%= @user.l_name%> </h1>

  <p>Welcome to your profile!</p>
</div>

<a href="<%= library_path %>"><button class="button_1">My Library</button></a>

<a href="<%= books_path %>"><button class="button_1">Book Search</button></a>

<div class="borrow_content">
  <ul>
    <% Borrow.all.each do |q|%>
      <%if q.user_id == @user.id%>
          <li><%=q.friend%></li>
          <li><%=q.title%></li>
          <%end%>
    <%end%>
  </ul>
</div>

<div class="modify_user_form">
  <h4>Want to update your profile?</h4>
    <%= form_for @user do |f| %>
      <div class="modify_input_wrapper">
        <p>First Name: <% f.label "First Name" %><%= f.text_field :f_name %></p>
      </div>
      <div class="modify_input_wrapper">
        <p>Last Name: <% f.label "Last Name" %><%= f.text_field :l_name %></p>
      </div>
      <div class="modify_input_wrapper">
        <p>Username: <% f.label "Username" %><%= f.text_field :username %></p>
      </div>
      <div class="modify_input_wrapper">
        <p>Email: <% f.label "Email" %><%= f.email_field :email %></p>
      </div>
      <div class="modify_user_form_submit">
        <%= f.submit "Update" %>
      </div>
    <% end %>
</div>
