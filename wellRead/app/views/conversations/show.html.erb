<h1 class="conversation_title"><%= @conversation.title %></h1>

<div class="create_chat">
  <% @chat = Chat.new%>
  <%= form_for(@chat, :url => book_conversation_chats_path(@conversation.book_id, @conversation.id)) do |f| %>
    <div class="add_chat">
      <% f.label :content %>
      <%= f.text_area :content, placeholder: "Add to the conversation here!" %>
    </div>
    <div class="chat_submit">
      <%= f.submit "Submit"%>
    </div>
  <% end %>
</div>

<div class="chat_thread">
  <% @conversation.chats.each do |chat| %>
  <div class="chat">
    <ul>
        <li><%=chat.user_name%></li>
        <li><%=chat.content%></li>
        <% if user_signed_in? %>
            <%if @chat.user_id == current_user.id %>
            <%=link_to "Edit Comment", edit_book_conversation_chat_path(chat.conversation.book_id, chat.conversation_id, chat.id) %>
            <%=link_to "Delete", book_conversation_chat_path( book.id, chat.conversation_id, chat.id), method: :delete, data: {confirm: "Are you sure?"} %>
            <%end%>
        <%end%>
    </ul>
  </div>
  <%end%>
</div>

